{
  "version": 3,

"configurePresets": [
{
  "name": "ci",
  "binaryDir": "${sourceDir}/build",
  "environment": {
    "CUDAARCHS": "72",
    "CFLAGS": "-DFCLAW_ENABLE_DEBUG",
    "CXXFLAGS": "-DFCLAW_ENABLE_DEBUG"
  },
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "RelWithDebInfo"
  }
},
{
  "name": "default",
  "binaryDir": "${sourceDir}/build",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Release",
    "mpi": true,
    "clawpack": true,
    "fclaw_applications": false}
},
{
  "name": "mac", "inherits": "default",
  "displayName": "macOS",
  "environment": {
    "CMAKE_BUILD_TYPE": "RelWithDebInfo",
    "CC": "gcc-11",
    "CFLAGS": "-DFCLAW_ENABLE_DEBUG",
    "CXX": "g++-11",
    "CXXFLAGS": "-DFCLAW_ENABLE_DEBUG",
    "FC": "gfortran-11"
  }
}
],
"buildPresets": [
  {
    "name": "default",
    "configurePreset": "default"
  },
  {
    "name": "ci",
    "configurePreset": "ci"
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "default",
  "output": {
    "outputOnFailure": true,
    "verbosity": "default"
  },
  "execution": {
    "noTestsAction": "error",
    "scheduleRandom": true,
    "stopOnFailure": false}
}
]
}
